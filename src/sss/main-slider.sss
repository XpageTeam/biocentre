#content
	position: relative

.main-slider
	position: relative

	.swiper-wrapper
		z-index: 50 !important

	&:not(.swiper-container-initialized)
		.swiper-slide
			&:not(:first-child)
				display: none !important

	&:before
		content: ''
		display: block
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 381px
		background-image: url('../img/header-fade.png')
		background-position: top left
		background-repeat-x: repeat
		z-index: 90
		pointer-events: none

	&__slide
		position: relative
		display: block
		background-color: var(--second-color)

		&:before
			content: ''
			display: block
			position: absolute
			left: 0
			top: 0
			right: 0
			bottom: 0
			background-color: rgba(0, 0, 0, 0.3)


		img
			display: block
			width: 100%
			width: 100%
			height: 100%
			object-fit: cover
			object-position: center


		&-info
			&-cont
				position: absolute
				top: 0
				left: 0
				right: 0
				bottom: 0
				display: flex
				flex-direction: column
				align-items: center
				justify-content: center

				> .wrapper
					flex: 1 1 auto
					width: 100%
					display: flex
					align-items: flex-end
					justify-content: center
					margin-bottom: 115px



		&-title, &-btn
			text-align: center

			span
				font-size: 30px
				// font-size: 3.4em
				font-weight: bold
				color: #fff
				background-color: rgba(255, 255, 255, 0.5)
				display: inline
				padding: 10px 0 4px
				// line-height: 62px
				// line-height: 1.31em
				line-height: 1.47
				box-shadow: 14px 0 0 rgba(255, 255, 255, 0.5), -14px 0 0 rgba(255, 255, 255, 0.5)
				text-shadow: 0 0 20px rgba(0, 0, 0, 0.3)

		// &-title
		// 	span
		// 		text-transform: uppercase

		&-btn
			margin-top: 25px

			span
				background-color: transparent
				box-shadow: none




	&__arrow
		position: absolute
		top: calc(50% - 24px)
		left: 0
		right: 0

		.swiper-button
			position: relative
			top: auto
			left: auto
			right: auto
			bottom: auto
			size: 48px
			background-color: #fff
			background-image: none
			border-radius: 50%
			margin: 0
			z-index: 100

			&:before
				content: ''
				display: block
				position: absolute
				top: calc(50% - 4px)
				left: calc(50% - 6px)
				size: 8px
				border-top: 1px solid #000
				border-right: 1px solid #000
				transform: rotate(45deg)




		.wrapper
			width: 100%
			max-width: 1870px
			display: flex
			justify-content: space-between



.main-slider__arrow
	.wrapper
		box-sizing: border-box

.bx-mac

	.main-slider

		&__slide

			&-title, &-btn

				span
					font-size: 30px
					line-height:  1.68




