@media screen and (max-width: 660px)

	.main-slider

		&:before
			display: none


	.main-slider__slide img
		height: auto


	.main-slider__slide-info-cont>.wrapper
		justify-content: flex-start
		padding: 0 55px 0 55px

	.main-slider__slide-btn, .main-slider__slide-title
		text-align: left

	.main-slider__slide-info
		max-width: 100%

	.main-slider__arrow
		top: calc(100% - 95px)

		.wrapper
			justify-content: flex-start
			padding: 0 20px 0 45px

		.swiper-button-next
			margin-left: 20px

	.main-slider__slide-btn span, .main-slider__slide-title span
		box-shadow: 10px 0 0 hsla(0,0%,100%,.5), -10px 0 0 hsla(0,0%,100%,.5)
		background: none !important
		box-shadow: none
		padding: 0
		// margin-left: -15px
		// display: inline-block

	.main-slider__slide-btn span, .main-slider__slide-title span
		font-size: 19px
		line-height: 1.75


	.main-slider__arrow .swiper-button
		width: 35px
		height: 35px

	.main-slider__slide-btn
		margin-top: 35px

		span
			font-size: 15px !important
			line-height: 1
			box-shadow: none
			text-shadow: none


	.main-slider__slide img
		height: calc(100vh - 80px)

	.main-slider__slide-info-cont>.wrapper
		padding: 0 50px




